{
  "name": "jacques",
  "version": "0.1.0",
  "description": "Real-time context monitor for AI coding assistants",
  "type": "module",
  "private": true,
  "workspaces": [
    "core",
    "server",
    "cli",
    "gui"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:all": "npm run build:core && npm run build:server && npm run build:cli && npm run build:gui",
    "build:core": "cd core && npm run build",
    "build:server": "cd server && npm run build",
    "build:cli": "cd cli && npm run build",
    "build:gui": "cd gui && npm run build",
    "start:server": "cd server && npm start",
    "stop:server": "node scripts/stop-server.js",
    "restart:server": "npm run stop:server && npm run start:server",
    "start:cli": "cd cli && node dist/cli.js",
    "start:gui": "cd gui && npm run dev",
    "start": "npx jacques",
    "cli": "cd cli && node dist/cli.js",
    "dev:core": "cd core && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:cli": "cd cli && npm run dev",
    "dev:gui": "cd gui && npm run dev",
    "test": "cd server && npm test",
    "test:core": "cd core && npm test",
    "test:cli": "cd cli && npm test",
    "setup": "node scripts/setup.js",
    "status": "cd cli && node dist/cli.js status",
    "configure": "node scripts/configure-claude.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "",
  "license": "MIT"
}
